{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@providers": ["./src/providers"],
      "@library/*": ["./src/library/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@libs/*": ["./src/libs/*"],
      "@config/*": ["./src/config/*"],
      "@shared/*": ["./src/shared/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@api/*": ["./src/api/*"],
      "@models*": ["./src/models"],
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/store/*"],
      "@styles": ["./src/styles/index.css"],
      "@src/*": ["./src/*"]
    },
    "baseUrl": "./",
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "useDefineForClassFields": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
    "node_modules"
    // "dist",
    // "coverage",
    // ".storybook",
    // "**/*.stories.tsx",
    // "**/*.test.tsx",
    // "**/*.test.ts"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
